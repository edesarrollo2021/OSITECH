<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>

        <record id="hr_employee_infonavit_fonacot_inherit_form" model="ir.ui.view">
			<field name="name">hr.employee.fona.info.inherit</field>
			<field name="model">hr.employee</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="hr_employe_mexico.view_employee_mexico_form"/>
			<field name="arch" type="xml">
                <xpath expr="//page[@name='family']" position="after">
                    <page name="infonavit" string="INFONAVIT" groups="hr.group_hr_user">
                        <field name="infonavit_ids">
                            <form>
                                <header>
                                   <button name="action_active" states="draft,inactive" string="Activate" class="oe_highlight" type="object" groups="hr.group_hr_user"/>
                                   <button name="action_inactive" states="active" string="Inactive" class="oe_highlight" type="object" groups="hr.group_hr_user"/>
                                   <field name="state" widget="statusbar" statusbar_visible="draft,active"/>
                                </header>
                                <group>
                                    <group>
                                        <field name="infonavit_credit_number" required="1"/>
                                        <field name="date" required="1"/>
                                        <field name="date_suspension" />
                                        <field name="type" required="1"/>
                                        <field name="value" required="1"/>
                                    </group>
                                </group>
                            </form>
                            <tree>
                                <field name="infonavit_credit_number"/>
                                <field name="date" />
                                <field name="state" />
                            </tree>
                        </field>
                    </page>
                    <page name="fonacot" string="FONACOT" groups="hr.group_hr_user">
						<group>
							<group>
								<field name="fonacot_customer_number" />
							</group>
						</group>
                        <field name="fonacot_ids">
                            <form>
                                <header>
                                   <button name="action_active" states="draft,inactive" string="Activate" class="oe_highlight" type="object" groups="hr.group_hr_user"/>
                                   <button name="action_inactive" states="active" string="Inactive" class="oe_highlight" type="object" groups="hr.group_hr_user"/>
                                   <field name="state" widget="statusbar" statusbar_visible="draft,active"/>
                                </header>
                                <group>
                                    <group>
                                        <field name="fonacot_customer_number" />
                                        <field name="fonacot_credit_number" />
                                        <field name="date_start" />
                                        <field name="date_end" />
                                    </group>
                                    <group>
                                        <field name="fee" string="Monthly fee"/>
                                    </group>
                                </group>
                            </form>
                            <tree>
                                <field name="fonacot_credit_number"/>
                                <field name="fee" />
                                <field name="date_start" />
                                <field name="date_end" />
                                <field name="state" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
        
		<!-- INFONAVIT -->
        
        <record id="view_hr_infonavit_credit_line_form" model="ir.ui.view">
        <field name="name">hr.infonavit.credit.line.form</field>
        <field name="model">hr.infonavit.credit.line</field>
        <field name="arch" type="xml">
            <form string="Credit INFONAVIT">
                <header>
				   <button name="action_active" states="draft,inactive" string="Activate" class="oe_highlight" type="object" groups="hr.group_hr_user"/>
				   <button name="action_inactive" states="active" string="Inactive" class="oe_highlight" type="object" groups="hr.group_hr_user"/>
				   <field name="state" widget="statusbar" statusbar_visible="draft,active"/>
				</header>
				<sheet>
					 <div class="oe_button_box" name="button_box">
						<button class="oe_stat_button" name="document_view" type="object" icon="fa-list-ol" groups="hr.group_hr_user">
							<field string="Documents" name="attachment_count" widget="statinfo"/>
						</button>
					</div>
					<group>
						<group>
							<field name="employee_id" required="1"/>
							<field name="infonavit_credit_number" />
							<field name="date" />
							<field name="date_suspension" />
						</group>
						<group>
							<field name="type" required="1"/>
							<field name="value" required="1"/>
						</group>
					</group>
				</sheet>
				 <div class="oe_chatter">
					<field name="message_follower_ids" widget="mail_followers"/>
					<field name="activity_ids" widget="mail_activity"/>
					<field name="message_ids" widget="mail_thread"/>
				</div>
            </form>
        </field>
		</record>
		
		<record id="view_hr_infonavit_credit_line_tree" model="ir.ui.view">
			<field name="name">hr.infonavit.credit.line.tree</field>
			<field name="model">hr.infonavit.credit.line</field>
			<field name="arch" type="xml">
				<tree string="Credit INFONAVIT">
					<field name="employee_id"/>
					<field name="infonavit_credit_number"/>
					<field name="date" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<record id="action_hr_infonavit_credit_line" model="ir.actions.act_window">
			<field name="name">Credit INFONAVIT</field>
			<field name="res_model">hr.infonavit.credit.line</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		
		<!-- FONACOT -->
        
        
        <record id="view_hr_fonacot_credit_line_form" model="ir.ui.view">
        <field name="name">hr.fonacot.credit.line.form</field>
        <field name="model">hr.fonacot.credit.line</field>
        <field name="arch" type="xml">
            <form string="Credit FONACOT">
                <header>
				   <button name="action_active" states="draft,inactive" string="Activate" class="oe_highlight" type="object" groups="hr.group_hr_user"/>
				   <button name="action_inactive" states="active" string="Inactive" class="oe_highlight" type="object" groups="hr.group_hr_user"/>
				   <field name="state" widget="statusbar" statusbar_visible="draft,active"/>
				</header>
				<sheet>
					 <div class="oe_button_box" name="button_box">
						<button class="oe_stat_button" name="document_view" type="object" icon="fa-list-ol" groups="hr.group_hr_user">
							<field string="Documents" name="attachment_count" widget="statinfo"/>
						</button>
					</div>
					<group>
						<group>
							<field name="employee_id" required="1"/>
							<field name="fonacot_customer_number" />
							<field name="fonacot_credit_number" />
							<field name="date_start" />
							<field name="date_end" />
						</group>
						<group>
							<field name="fee" string="Monthly fee"/>
						</group>
					</group>
				</sheet>
				 <div class="oe_chatter">
					<field name="message_follower_ids" widget="mail_followers"/>
					<field name="activity_ids" widget="mail_activity"/>
					<field name="message_ids" widget="mail_thread"/>
				</div>
            </form>
        </field>
		</record>

		<record id="view_hr_fonacot_credit_line_tree" model="ir.ui.view">
			<field name="name">hr.fonacot.credit.line.tree</field>
			<field name="model">hr.fonacot.credit.line</field>
			<field name="arch" type="xml">
				<tree>
					<field name="fonacot_credit_number"/>
					<field name="fee" />
					<field name="date_start" />
					<field name="date_end" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<record id="action_hr_fonacot_credit_line" model="ir.actions.act_window">
			<field name="name">Credit FONACOT</field>
			<field name="res_model">hr.fonacot.credit.line</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem
			id="menu_credits_employee"
			name="Credits"
			parent="hr.menu_hr_root"
			groups="hr.group_hr_manager,hr.group_hr_user"
			sequence="90"/>

		<menuitem
			id="menu_credits_fonacot_employee"
			name="Credits FONACOT"
			action="action_hr_fonacot_credit_line"
			parent="menu_credits_employee"
			groups="hr.group_hr_manager,hr.group_hr_user"
			sequence="10"/>


		<menuitem
			id="menu_credits_infonavit_employee"
			name="Credits INFONAVIT"
			action="action_hr_infonavit_credit_line"
			parent="menu_credits_employee"
			groups="hr.group_hr_manager,hr.group_hr_user"
			sequence="10"/>
        
    </data>
</odoo>
