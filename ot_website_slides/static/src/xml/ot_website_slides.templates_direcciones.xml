<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="ot_website_slides.warning_format_number">
    <t t-set="accountant" t-value="0"/>
    <t t-set="position" t-value="position_job[0]"/>
    <t t-set="position_final" t-value="position_job[0]"/>
    <t t-set="id" t-value="list_id"/>
    <t t-set="div_none" t-value="list_pos"/>
    <div id="jobs_position" > 
        <t t-name="ot_website_slides.warning_format_number">
        <div class="row" style="padding-left: 30%; padding-right: 20%; padding-top: 2%; padding-bottom: 2%;">
            <div class="pt16 pb16 col-lg-5 offset-lg-1 o_colored_level"
                 style="display: block; width: 100% !important; height: auto !important; text-align: center;"
                 data-name="string">
                <img class="img-fluid o_we_custom_image m-3 d- mx-auto"
                     t-attf-src="data:image/*;base64,{{image_addresses}}"/>
            </div>
            <div class="col-lg-4">
                <h2 style="text-align: center; padding-top: 20%;">Bienvenido</h2>
                <h5 style="text-align: center;"><span>La <t t-esc="name_addresses"/> te invita a seleccionar el puesto que te corresponde para conocer tu plan de vida y carrera.</span></h5>
            </div>
        </div>
        <div class="row" style="padding-left: 20%; padding-right: 20%; padding-top: 2%; padding-bottom: 2%;">
            <t t-set="posi" t-value="0"/>
            <t t-foreach="name_job" t-as="name">
                <t t-set="position" t-value="position_job[accountant]"/>
                <t t-if="div_none[posi] == 1">
                    <t t-if="position != position_final">
                    <t t-set="position_final" t-value="position_job[accountant]"/>
                    <div class="col-12" style="height:50px; border-top: dashed; border-color: rgb(155, 155, 160)"/>
                </t>
                    <div class="bt_class col-4"
                     style="display: block; width: 100% !important; height: auto !important; text-align: center;"
                     data-name="string">
                    </div>
                </t>
                <t t-if="div_none[posi] != 1">
                <t t-if="position != position_final">
                    <t t-set="position_final" t-value="position_job[accountant]"/>
                    <div class="col-12" style="height:50px; border-top: dashed; border-color: rgb(155, 155, 160)"/>
                </t>
                </t>
                <t t-set="posi" t-value="posi + 1"/>
                <div class="jobs_pos col-4"
                     style="display: block; width: 100% !important; height: auto !important; text-align: center;"
                     data-name="string">
                    <img t-att-id="list_id[accountant]" class="img-fluid o_we_custom_image m-3 d- mx-auto"
                         style="height:35%;" t-attf-src="data:image/*;base64,{{image_job[accountant]}}"/>
                    <p t-esc="name_job[accountant]"/>
                </div>
                <t t-set="accountant" t-value="accountant + 1"/>
            </t>
        </div>
    </t>
    </div>
    </t>
    
    <t t-name="ot_website_slides.my_life_mx">
     <div>
        <img class="img-fluid o_we_custom_image m-3 d- mx-auto"
             t-attf-src="data:image/*;base64,{{image}}"/>
    </div>
    
    <div class="col-lg-4">
        <h5 style="text-align: center;"><span>Plan de Vida y Carrera para <t t-esc="name"/></span></h5>
    </div>
    
    <div class="col-lg-4">
        <img src="/ot_website_slides/static/src/img/plandevida.jpg"/>
    </div>
    
    <div class="col-lg-4">
        <h5 style="text-align: center;"><span><t t-esc="name"/></span></h5>
    </div>
    
     <div>
        <img class="img-fluid o_we_custom_image m-3 d- mx-auto"
             t-attf-src="data:image/*;base64,{{list_image_public[1]}}"/>
    </div>
        
    <div class="col-lg-4">
        <h5 style="text-align: center;"><span><t t-esc="list_pref_public"/></span></h5>
        <h5 style="text-align: center;"><span><t t-esc="list_name_course"/></span></h5>
    </div>
    
    <a href="/slides/abc-curso-publico-1-1" class="btn btn-outline-primary rounded-circle btn-lg">Ingresar</a>
    
    
    </t>
    
</templates>


