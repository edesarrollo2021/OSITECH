<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="ot_web_adresses" name="Adresses">
        <t t-call="website.layout">
            <form id="ot_web_adresses">
                <div class="container-fluid row" style="padding-left: 20%;">
                    <t t-set="val" t-value="1"/>
                    <t t-foreach="addresses" t-as="add">
                         <a t-attf-href="direcciones/##{val}">
                              <section>
                                <div class="col-lg-40 directionAEROMAR" style="margin: 5%">
                                    <img class="img-fluid o_we_custom_image m-3 d- mx-auto" t-attf-src="data:image/*;base64,{{add.image}}"/>
                                </div>
                              </section>
                         </a>
                   <t t-set="val" t-value="val + 1"/>
                    </t>
                </div>

            </form>
        </t>
    </template>
    
</odoo>
