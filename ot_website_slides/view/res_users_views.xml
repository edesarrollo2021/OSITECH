<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="ot_web_login_layout_mod" inherit_id="web.login_layout" name="Sign up login">
        <xpath expr="//div[@t-attf-class='card border-0 mx-auto bg-100 {{login_card_classes}} o_database_list']"
               position="replace">
            <div t-attf-class="card border-0 mx-auto bg-100 {{login_card_classes}} o_database_list"
                 style="max-width: 100%;">
                <div class="card-body">
                    <t t-raw="0"/>
                </div>
            </div>
        </xpath>
    </template>

    <template id="ot_auth_signup_signup_mod" inherit_id="auth_signup.reset_password" name="Sign up login">
        <xpath expr="//form[@class='oe_reset_password_form']" position="replace">
            <div class="row" style="height:80px;">
                <div class="col-12"></div>
            </div>
            <div class="row col-sm-12 col-md-12 col-lg-12 col-xl-12" style="height:100%; justify-content: center;">
                <div class="col-sm-12 col-md-4 col-lg-8 col-xl-4 border"
                     style="border-radius: 30px; padding:0%; height: 100%; background: radial-gradient(circle, rgba(0,31,181,1) 0%, rgba(0,1,46,1) 100%);     width: 2000px;">
                    <div style="color:black; border: solid 1px #4e4e4e;border-radius:30px 30px 0px 0px;padding-top: 10%;padding-left: 10%;padding-right: 10%;padding-bottom: 10%;">
                        <p style="margin: 0px;font-size: 35px;font-weight: 900; color: white; text-align:left;">
                            Universidad de AEROMAR</p>
                        <p style="margin: 0px;font-size: 15px; color: white; text-align:left;">
                            Bienvenido a nuestra plataforma educativa,</p>
                        <p style="margin: 0px;font-size: 15px; color: white; text-align:left;">
                            te deseamos el mayor de los éxitos.</p>
                    </div>
                    <div style="color:black; background-color:white; border: solid 1px #4e4e4e; border-top:0px;border-radius:0px 0px 30px 30px;padding-top: 10%;padding-left: 10%;padding-right: 10%;padding-bottom: 10%;">
                        <form class="Ot_ShowHidePassword">
                            <div>
                                <p style="margin: 0px;font-size: 25px;font-weight: 900; color: #646060; text-align: center; padding-bottom: 10%;">
                                    Restablecimiento de contraseña
                                </p>
                            </div>
                            <div id="ot_form_register_user" t-name="ot_website_slides.ot_form_register_user"
                                 style="font-size:20px;">
                                <div>
                                    <div class="row Ot_ShowHidePassword" style="background-color: white;">
                                        <div class="col-sm-12">
                                            <form class="oe_reset_password_form" role="form" method="post"
                                                  t-if="not message">
                                                <input type="hidden" name="csrf_token"
                                                       t-att-value="request.csrf_token()"/>
                                                <t t-if="token and not invalid_token">
                                                    <t t-call="auth_signup.fields">
                                                        <t t-set="only_passwords" t-value="1"/>
                                                    </t>
                                                </t>
                                                <t t-if="not token">
                                                    <div class="form-group field-login">

                                                        <label for="login" class="col-form-label">Ingrese su
                                                            correo</label>
                                                        <div class="input-group">
                                                            <input type="text" name="login" t-att-value="login"
                                                                   id="login" class="form-control"
                                                                   autofocus="autofocus" required="required"
                                                                   autocapitalize="off"/>
                                                            <div class="input-group-append">
                                                                <button class="btn btn-secondary" type="button" style="background-color:darkblue; color:white;">
                                                                    <i class="fa fa-eye"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </t>
                                                <p class="alert alert-danger" t-if="error" role="alert">
                                                    <t t-esc="error"/>
                                                </p>
                                                <input type="hidden" name="redirect" t-att-value="redirect"/>
                                                <input type="hidden" name="token" t-att-value="token"/>
                                                <div class="clearfix oe_login_buttons">
                                                    <button type="submit" class="btn btn-primary btn-block" style="background-color:darkblue; color:white;">
                                                        Confirmar</button>
                                                    <div class="d-flex justify-content-between align-items-center small mt-2">
                                                        <a t-if="not token" t-attf-href="/web/login?{{ keep_query() }}">
                                                            Regresar al login</a>
                                                        <a t-if="invalid_token" href="/web/login">Regresar al login</a>
                                                    </div>
                                                    <div class="o_login_auth"/>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </xpath>
    </template>


</odoo>