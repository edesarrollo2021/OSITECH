<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_slide_channel_form_ositech_mx" model="ir.ui.view">
            <field name="name">slide.channel.form</field>
            <field name="model">slide.channel</field>
            <field name="priority">5</field>
            <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='options']//group[@name='access_rights']" position="replace">
                   <group name="access_rights_mx" string="Permisos de acceso">
                        <field name="enroll" widget="radio" options="{'horizontal': true}" invisible="1"/>
                        <field name="upload_group_ids" widget="many2many_tags" domain="[('category_id','=','eLearning')]"/>
                        <field name="enroll_group_ids" widget="many2many_tags" string="Suscribir grupos" domain="[('category_id','=','eLearning')]"/>
                    </group>
                </xpath>
                <xpath expr="//page[@name='options']//group//field[@name='website_id']" position="before">
                   <field name="training_model" widget="radio"/>
                    <field name="type_course_ids" mode="tree">
                        <tree string="Evaluacion" editable="bottom">
                            <field name="description"/>
                            <field name="percentage" sum="percentage"/>
                        </tree>
                    </field> 
                   <field name="constancy" widget="radio"/>
                   <label for="year" string="Periodicidad"/>
                    <div class="o_row">
                        <field name="year"/>Años
                        <field name="month"/>Meses
                        <field name="days"/>Días
                    </div>
                   <label for="hours" string="Duración"/>
                    <div class="o_row">
                        <field name="hours"/>Horas
                        <field name="minutes"/>Minutos
                    </div>
                   <field name="duration" invisible="0"/>
                   <field name="duration_hours" invisible="0"/>
                   <field name="vigencia"/>
                   <field name="life_plan_resource" widget="image"  class="oe_avatar"/>
                </xpath>
                <xpath expr="//page[@name='options']//group//field[@name='user_id']" position="attributes">
                    <attribute name="string">Instructor</attribute>
                </xpath>
                <xpath expr="//page[@name='options']//group//field[@name='channel_type']" position="attributes">
                   <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='options']//group//field[@name='user_id']" position="before">
                   <field name="channel_type_mx"/>
                </xpath>
                <xpath expr="//page[@name='options']//group//field[@name='visibility']" position="after">
                   <field name="complementary" widget="check" attrs="{'invisible': [('visibility', '!=', 'members')]}"/>
                </xpath>
                <xpath expr="//page[@name='description']//group//field[@name='description']" position="before">
                   <field name="general_objective" placeholder="Define what the general objective of this course is"/>
                </xpath>
                <xpath expr="//page[@name='description']//group//field[@name='description']" position="after">
                   <field name="descriptive_picture" widget="image"/>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>
