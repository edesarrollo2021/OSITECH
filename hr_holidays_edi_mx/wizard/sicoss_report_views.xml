<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="sicoss_report_view" model="ir.ui.view">
        <field name="name">sicoss.report.form</field>
        <field name="model">sicoss.report</field>
        <field name="arch" type="xml">
            <form string="Sicoss Report">
                <group>
                    <group>
                        <field name="date_from" required="1"/>
                        <field name="date_to" required="1"/>
                    </group>
                    <group>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                    </group>
                </group>
                <footer>
                    <button name="generate_report_txt" string="Download" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sicoss_report" model="ir.actions.act_window">
        <field name="name">Sicoss Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sicoss.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_sicoss_report"
        name="Sicoss Inabilities Report"
        sequence="4"
        parent="hr_employe_mexico.menu_view_history_changes"
        action="action_sicoss_report"/>

    </data>
</odoo>