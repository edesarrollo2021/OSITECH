    <record id="view_hr_leave_reason_reject_form" model="ir.ui.view">
        <field name="name">hr.leave.reason.reject.form</field>
        <field name="model">hr.leave.reason.reject</field>
        <field name="arch" type="xml">
            <form string="Reason Reject Holidays">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_leave_reason_reject_tree" model="ir.ui.view">
        <field name="name">hr.leave.reason.reject.tree</field>
        <field name="model">hr.leave.reason.reject</field>
        <field name="arch" type="xml">
            <tree string="Reason Reject Holidays">
                <field name="name"/>
            </tree>
        </field>
    </record>

     <record id="action_hr_leave_reason_reject" model="ir.actions.act_window">
        <field name="name">Reason Reject (Holidays)</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.leave.reason.reject</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="hr_leave_reason_reject_menu"
        name="Reason Reject (Holidays)"
        action="action_hr_leave_reason_reject"
        parent="hr_holidays.menu_hr_holidays_configuration"
        sequence="10"
       />

