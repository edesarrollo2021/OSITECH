<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_holiday_status_view_form_inherit_mx" model="ir.ui.view">
        <field name="name">hr.leave.type.form.inherit.mx</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='notification']" position="inside">
                <group name="extra_mx">
                    <field name="unpaid"/>
                    <field name="duration_months"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='responsible_id']" position="after">
                <field name="time_type"/>
            </xpath>

        </field>
    </record>

</odoo>