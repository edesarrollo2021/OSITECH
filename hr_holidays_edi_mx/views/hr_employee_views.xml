<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="view_employee_mexico_form" model="ir.ui.view">
        <field name="name">hr.employee.mexico.form</field>
        <field name="model">hr.employee</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']" position="inside">
                <group name="holidays" string="Responsible Holidays">
                    <field name="responsible_holidays" nolabel="1"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='leave_manager_id']" position="after">
                <field name="approver_kiosk_id" domain="[('approve_holidays', '=', True)]"/>
            </xpath>
        </field>
    </record>

    </data>
</odoo>