<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_company_form_mexico_inherit" model="ir.ui.view">
            <field name="name">company.form.mexico.inherit.view</field>
            <field name="model">res.company</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <page position="after">
                     <page string="Company Information" groups="base.group_erp_manager">
                         <group>
                             <field name="employer_register_ids">
                                 <form>
                                    <header>
                                        <button name="action_timed_out" states="valid" string="Timed out" class="oe_highlight" type="object"/>
                                        <button name="action_revoked" states="valid" string="Revoke" class="oe_highlight" type="object"/>
                                        <field name="state" widget="statusbar" statusbar_visible="valid,timed_out,revoked"/>
                                    </header>
                                    <group>
                                        <group>
                                            <field name="employer_registry"/>
                                            <field name="economic_activity"/>
                                        </group>
                                        <group>
                                            <field name="company_id" invisible="1"/>
                                            <field name="country_code" invisible="1"/>
                                        </group>
                                    </group>
                                    <group>
                                        <group>
                                            <field name="geographic_area"/>
                                            <field name="delegation_id"/>
                                            <field name="subdelegation_id" domain="[('delegation_id','=',delegation_id)]"/>
                                        </group>
                                        <group>
                                            <label for="street_name" string="Address"/>
                                            <div class="o_address_format">
                                                <field name="street_name" placeholder="Street Name..."/>
                                                <div class="o_row">
                                                    <label for="street_number" class="oe_edit_only"/>
                                                    <span> </span>
                                                    <field name="street_number"/>
                                                    <label for="street_number2" class="oe_edit_only"/>
                                                    <field name="street_number2"/>
                                                </div>
                                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                                <div attrs="{'invisible': [('country_code', '!=', 'MX')]}">
                                                    <div class="o_row">
                                                        <field name="colony" placeholder="Colony..."/>
                                                        <field name="colony_code" placeholder="Colony Code"/>
                                                        <field name="locality"
                                                               attrs="{'invisible': ['|',('locality_id', '!=', False),('locality', 'in', ['', False ])]}"
                                                               placeholder="Locality..."/>
                                                        <field name="locality_id"
                                                               placeholder="Locality..."
                                                               domain="[('state_id','=', state_id)]"
                                                               options='{"no_create": True}'/>
                                                    </div>
                                                </div>
                                                <field name="city" placeholder="City" class="o_address_city"/>
                                                <field name="state_id" class="o_address_state" placeholder="State"
                                                    domain="[('country_id','=',country_id)]" options='{"no_open": True}'/>
                                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                                <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                            </div>
                                        </group>
                                    </group>
                                    <group>
                                        <field name="job_risk"/>
                                        <field name="economic_sector_id"/>
                                        <field name="risk_factor_ids">
                                            <form>
                                                <group col="4">
                                                    <field name="risk_factor" />
                                                    <field name="date_from" />
                                                    <field name="date_to" />
                                                </group>
                                            </form>
                                            <tree editable="botton">
                                                <field name="risk_factor" />
                                                <field name="date_from" />
                                                <field name="date_to" />
                                            </tree>
                                        </field>
                                    </group>
                                </form>
                                <tree>
                                    <field name="employer_registry"/>
                                    <field name="validity_signature"/>
                                    <field name="state"/>
                                </tree>
                             </field>
                         </group>
                     </page>
                </page>
            </field>
        </record>

        <record id="view_res_employer_register_form" model="ir.ui.view">
            <field name="name">res.employer.register.form</field>
            <field name="model">res.employer.register</field>
            <field name="arch" type="xml">
                <form string="Employer Register">
                    <header>
                        <button name="action_timed_out" states="valid" string="Timed out" class="oe_highlight" type="object"/>
                        <button name="action_revoked" states="valid" string="Revoke" class="oe_highlight" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="valid,timed_out,revoked"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employer_registry"/>
                                <field name="economic_activity"/>
                            </group>
                            <group>
                                <field name="electronic_signature" widget="many2many_binary" class="oe_inline"/>
                                <field name="validity_signature"/>
                                <field name="company_id" invisible="1"/>
                                <field name="country_code" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="geographic_area"/>
                                <field name="delegation_id" required="1"/>
                                <field name="subdelegation_id" domain="[('delegation_id','=', delegation_id)]"
                                context="{'default_delegation_id': delegation_id}"/>
                            </group>
                            <group>
                                <label for="street_name" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street_name" placeholder="Street Name..."/>
                                    <div class="o_row">
                                        <label for="street_number" class="oe_edit_only"/>
                                        <span> </span>
                                        <field name="street_number"/>
                                        <label for="street_number2" class="oe_edit_only"/>
                                        <field name="street_number2"/>
                                    </div>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <div attrs="{'invisible': [('country_code', '!=', 'MX')]}">
                                        <div class="o_row">
                                            <field name="colony" placeholder="Colony..."/>
                                            <field name="colony_code" placeholder="Colony Code"/>
                                            <field name="locality"
                                                   attrs="{'invisible': ['|',('locality_id', '!=', False),('locality', 'in', ['', False ])]}"
                                                   placeholder="Locality..."/>
                                            <field name="locality_id"
                                                   placeholder="Locality..."
                                                   domain="[('state_id','=', state_id)]"
                                                   options='{"no_create": True}'/>
                                        </div>
                                    </div>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                        domain="[('country_id','=',country_id)]" options='{"no_open": True}'/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                </div>
                            </group>
                        </group>
                        <group>
                            <field name="job_risk"/>
                            <field name="economic_sector_id"/>
                            <field name="risk_factor_ids">
                                <form>
                                    <group col="4">
                                        <field name="risk_factor" />
                                        <field name="date_from" />
                                        <field name="date_to" />
                                    </group>
                                </form>
                                <tree editable="botton">
                                    <field name="risk_factor" />
                                    <field name="date_from" />
                                    <field name="date_to" />
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_res_employer_register_tree" model="ir.ui.view">
            <field name="name">res.employer.register.tree</field>
            <field name="model">res.employer.register</field>
            <field name="arch" type="xml">
                <tree string="Employer Register">
                    <field name="employer_registry"/>
                    <field name="economic_activity"/>
                    <field name="validity_signature"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_res_company_economic_sector_tree" model="ir.ui.view">
            <field name="name">view.res.company.economic.sector.tree</field>
            <field name="model">res.company.economic_sector</field>
            <field name="arch" type="xml">
                <tree string="Economic Sector">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="view_res_company_economic_sector_search" model="ir.ui.view">
            <field name="name">view.res.company.economic.sector.search</field>
            <field name="model">res.company.economic_sector</field>
            <field name="arch" type="xml">
                <search string="Economic Sector">
                   <field name="name"/>
                   <field name="code"/>
                </search>
            </field>
        </record>

    </data>
</odoo>
