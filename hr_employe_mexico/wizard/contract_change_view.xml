<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="hr_contract_change_wizard_view" model="ir.ui.view">
        <field name="name">hr.contract.change.wizard</field>
        <field name="model">hr.contract.change.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Contract Change Wizard">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" readonly="1"/>
                            <field name="contract_id" readonly="1"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="field_changes" widget="radio"/>
                            <field name="salary" attrs="{'invisible': [('field_changes', 'not in', ['salary', 'seniority_premium'])], 'required': [('field_changes', 'in', ['salary', 'seniority_premium'])]}"/>
                        </group>
                    </group>
                </sheet>
               <footer>
                    <button string="Change" name="change_fields" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
               </footer>
            </form>
        </field>
    </record>

    <record id="contract_change_form_action" model="ir.actions.act_window">
        <field name="name">Contract Change</field>
        <field name="res_model">hr.contract.change.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_contract_id': active_id}</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr_contract.model_hr_contract"/>
        <field name="binding_view_types">form</field>
    </record>

    </data>
</odoo>
