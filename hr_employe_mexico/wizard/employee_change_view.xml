<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="hr_employee_change_wizard_view" model="ir.ui.view">
        <field name="name">hr.employee.change.wizard</field>
        <field name="model">hr.employee.change.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Employee Change Wizard">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" readonly="1"/>
                            <field name="date" readonly="0"/>
                        </group>
                        <group>
                            <field name="field_changes" widget="radio"/>
                            <field name="department_id" attrs="{'invisible': [('field_changes', '!=', 'department')], 'required': [('field_changes', '=', 'department')]}"/>
                            <field name="job_id" attrs="{'invisible': [('field_changes', '!=', 'job')], 'required': [('field_changes', '=', 'job')]}"/>
                            <field name="position_id" domain="[('job_id', '=', job_id), '|', ('employee_id', '=', False), ('employee_id', '=', employee_id)]"
                                   attrs="{'invisible': [('field_changes', '!=', 'job')], 'required': [('field_changes', '=', 'job')]}"
                                   context="{'default_job_id': job_id}"/>
                        </group>
                    </group>
                </sheet>
               <footer>
                    <button string="Change" name="change_fields" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="employee_change_form_action" model="ir.actions.act_window">
        <field name="name">Employee Change</field>
        <field name="res_model">hr.employee.change.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_employee_id': active_id}</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
    </record>

    </data>
</odoo>
