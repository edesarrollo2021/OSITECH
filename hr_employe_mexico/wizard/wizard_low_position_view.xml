<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="view_low_position_form" model="ir.ui.view">
        <field name="name">low.position.form</field>
        <field name="model">low.position</field>
        <field name="arch" type="xml">
        <form string="Low Position">
            <group>
                <group>
                    <field name="date"/>
                </group>
                <group>
                    <field name="position_id" invisible="1"/>
                </group>
            </group>
            <footer>
                <button name="change_position" string="Unsubscribe" type="object" class="btn-primary"/>
                <button string="Cancel" special="cancel" class="btn-default"/>
            </footer>
        </form>
        </field>
    </record>

    <record id="action_low_positions" model="ir.actions.act_window">
        <field name="name">Low Position</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">low.position</field>
        <field name="view_mode">form</field>
        <field name="binding_model_id" ref="model_hr_job_position"/>
        <field name="binding_view_types">form</field>
        <field name="context">{'default_position_id': active_id}</field>
        <field name="target">new</field>
    </record>

    </data>
</odoo>
