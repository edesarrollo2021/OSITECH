<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="view_hr_alimony_form" model="ir.ui.view">
        <field name="name">hr.alimony.form</field>
        <field name="model">hr.alimony</field>
        <field name="arch" type="xml">
            <form string="Alimony">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <group col="4">
                    <field name="employee_id"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="amount"/>
                    <field name="payment_type"/>
                    <field name="bank_account"/>
                    <field name="bank_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_hr_alimony_tree" model="ir.ui.view">
        <field name="name">hr.alimony.tree</field>
        <field name="model">hr.alimony</field>
        <field name="arch" type="xml">
            <tree string="Alimony">
                <field name="employee_id"/>
                <field name="name"/>
                <field name="amount"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_alimony" model="ir.actions.act_window">
        <field name="name">Alimony</field>
        <field name="res_model">hr.alimony</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_hr_alimony"
        name="Alimony"
        parent="hr.menu_hr_employee_payroll"
        sequence="13"
        action="action_hr_alimony"/>

    </data>
</odoo>
