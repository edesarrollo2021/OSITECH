<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <record id="hr_table_antiquity_form_view" model="ir.ui.view">
        <field name="name">hr.table.antiquity.form</field>
        <field name="model">hr.table.antiquity</field>
        <field name="arch" type="xml">
        <form string="Table of antiquity">
             <div class="oe_title">
				<label for="name" class="oe_edit_only"/>
				<h1>
					<field name="name" placeholder="Name" required="True"/>
				</h1>
			</div>
           <group>
                <field name="table_antiquity_ids" string="Table of antiquity">
                    <tree editable="bottom">
                        <field name="year" />
                        <field name="holidays"/>
                        <field name="vacation_cousin"/>
                        <field name="aguinaldo"/>
                        <field name="factor"/>
                    </tree>
                </field>
            </group>
         </form>
       </field>
    </record>

    <record id="hr_table_antiquity_tree_view" model="ir.ui.view">
        <field name="name">hr.table.antiquity.tree</field>
        <field name="model">hr.table.antiquity</field>
        <field name="arch" type="xml">
            <tree string="Table of antiquity">
               <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="hr_table_antiquity_search_view" model="ir.ui.view">
        <field name="name">hr.table.antiquity.search</field>
        <field name="model">hr.table.antiquity</field>
        <field name="arch" type="xml">
            <search string="Table of antiquity">
               <field name="name" />
            </search>
        </field>
    </record>

    <record id="hr_table_antiquity_action" model="ir.actions.act_window">
        <field name="name">Table of antiquity</field>
        <field name="res_model">hr.table.antiquity</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="hr_table_antiquity_tree_view" />
        <field name="search_view_id" ref="hr_table_antiquity_search_view" />
    </record>

    <menuitem
          name="Table of antiquity"
          parent="hr.menu_human_resources_configuration"
          groups="hr.group_hr_manager,hr.group_hr_user"
          id="hr_table_antiquity_menu"
          action="hr_table_antiquity_action"
          sequence="50"
      />

</odoo>
