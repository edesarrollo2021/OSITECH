<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_history_changes_form" model="ir.ui.view">
            <field name="name">history.changes.employee.form</field>
            <field name="model">history.changes.employee</field>
            <field name="arch" type="xml">
                <form string="History Changes" edit="false" create="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="contract_id"/>
                                <field name="type"/>
                                <field name="date"/>
                            </group>
                            <group string="Changes">
                                <field name="department_id" attrs="{'invisible': [('type', '!=', 'department')]}"/>
                                <field name="new_department_id" attrs="{'invisible': [('type', '!=', 'department')]}"/>
                                <field name="job_id" attrs="{'invisible': [('type', '!=', 'position')]}"/>
                                <field name="new_job_id" attrs="{'invisible': [('type', '!=', 'position')]}"/>
                                <field name="position_id" attrs="{'invisible': [('type', '!=', 'position')]}"/>
                                <field name="new_position_id" attrs="{'invisible': [('type', '!=', 'position')]}"/>
                                <field name="cost_center_id" attrs="{'invisible': [('type', '!=', 'cost_center')]}"/>
                                <field name="new_cost_center_id" attrs="{'invisible': [('type', '!=', 'cost_center')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_history_changes_employee_tree" model="ir.ui.view">
            <field name="name">history.changes.employee.tree</field>
            <field name="model">history.changes.employee</field>
            <field name="arch" type="xml">
                <tree string="History Changes Employee" edit="false" create="false">
                    <field name="employee_id"/>
                    <field name="contract_id"/>
                    <field name="type"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <record id="action_history_changes_employee" model="ir.actions.act_window">
            <field name="name">History Changes Employee</field>
            <field name="res_model">history.changes.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create your first History Change
              </p>
            </field>
        </record>

        <menuitem
            id="menu_view_history_changes"
            parent="hr.menu_hr_root"
            sequence="96"/>

        <menuitem
            id="menu_view_history_changes_employee"
            action="action_history_changes_employee"
            parent="menu_view_history_changes"
            sequence="5"/>

    </data>
</odoo>
