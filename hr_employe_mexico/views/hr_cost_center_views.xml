<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_hr_cost_center_form" model="ir.ui.view">
            <field name="name">hr.cost.center.form</field>
            <field name="model">hr.cost.center</field>
            <field name="arch" type="xml">
                <form string="Cost Center">
                    <sheet>
                        <group>
                            <group><field name="name"/></group>
                            <group><field name="code"/></group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_cost_center_tree" model="ir.ui.view">
            <field name="name">hr.cost.center.tree</field>
            <field name="model">hr.cost.center</field>
            <field name="arch" type="xml">
                <tree string="Cost Center">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="action_hr_cost_center" model="ir.actions.act_window">
            <field name="name">Cost Centers</field>
            <field name="res_model">hr.cost.center</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create your first cost center
              </p>
            </field>
        </record>

<!--
        <menuitem
            id="menu_view_hr_cost_center"
            action="action_hr_cost_center"
            parent="hr.menu_human_resources_configuration"
            sequence="1"/>
-->

    </data>
</odoo>
