<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="view_hr_ptu_employee_form" model="ir.ui.view">
        <field name="name">hr.ptu.employees.form</field>
        <field name="model">hr.ptu.employees</field>
        <field name="arch" type="xml">
            <form string="Select Employees for PTU">
                <group>
                    <span colspan="4" nolabel="1">This wizard will select employee(s) based on the dates specified on PTU.</span>
                </group>
                <group>
                    <group>
                        <field name="ptu_id" invisible="1"/>
                    </group>
                </group>
                <group colspan="4" >
                    <separator string="Employees" colspan="4"/>
                    <newline/>
                    <field name="employee_ids" nolabel="1" readonly="1">
                        <tree>
                            <field name="complete_name"/>
                            <field name="department_id"/>
                            <field name="job_id"/>
                        </tree>
                    </field>
                </group>
                <field name="state" invisible="1"/>
                <footer>
                    <button string="Save" name="save" type="object" class="oe_highlight" states="draft"/>
                    <widget name="ptu_lot" context="{'employee_ids': employee_ids}" states="done"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>

    <record id="action_hr_ptu_employee" model="ir.actions.act_window">
        <field name="name">Select Employees for PTU</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.ptu.employees</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    </data>
</odoo>