<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="hr_leave_view_form_edi_mx" model="ir.ui.view">
        <field name="name">hr.leave.view.form.mx</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="out_of_date" attrs="{'readonly': [('state', 'not in', ['draft', 'confirm'])]}"/>
                <field name="payroll_period_id"
                       domain="[('state', '=', 'open'), ('type', 'in', ['ordinary', 'settlement'])]"
                       attrs="{'readonly': [('state', 'not in', ['draft', 'confirm'])], 'required': [('out_of_date', '=', True)], 'invisible': [('out_of_date', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="hr_work_entry_view_form_mx" model="ir.ui.view">
        <field name="name">hr.work.entry.mx</field>
        <field name="model">hr.work.entry</field>
        <field name="inherit_id" ref="hr_work_entry.hr_work_entry_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='work_entry_type_id']" position="after">
                <field name="out_of_date" attrs="{'readonly': [('state', 'not in', ['draft', 'confirm'])]}"/>
                <field name="payroll_period_id"
                       attrs="{'readonly': [('state', 'not in', ['draft'])], 'required': [('out_of_date', '=', True)], 'invisible': [('out_of_date', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    </data>
</odoo>