<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="hr_provisions_form" model="ir.ui.view">
        <field name="name">hr.provisions.form</field>
        <field name="model">hr.provisions</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form create="0" edit="0">
                <group>
                    <group>
                        <field name="contract_id"/>
                        <field name="employee_id"/>
                    </group>
                    <group>
                        <field name="type"/>
                        <field name="year"/>
                        <field name="amount"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="hr_provisions_tree" model="ir.ui.view">
        <field name="name">hr.provisions.tree</field>
        <field name="model">hr.provisions</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="contract_id"/>
                <field name="employee_id"/>
                <field name="type"/>
                <field name="year"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <record id="hr_provisions_tree_manager" model="ir.ui.view">
        <field name="name">hr.provisions.tree.manager</field>
        <field name="model">hr.provisions</field>
        <field name="inherit_id" ref="hr_payroll_mexico.hr_provisions_tree"/>
        <field name="groups_id" eval="[(4, ref('hr_payroll_mexico.group_provisions'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="create">1</attribute>
            </xpath>
        </field>
    </record>

     <record id="action_hr_provisions" model="ir.actions.act_window">
        <field name="name">Provisions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.provisions</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
          name="Provisions"
          parent="hr_payroll.menu_hr_payroll_employees_root"
          id="menu_action_hr_provisions"
          action="action_hr_provisions"
          groups="base.group_no_one"
          sequence="50"
      />

    </data>
</odoo>