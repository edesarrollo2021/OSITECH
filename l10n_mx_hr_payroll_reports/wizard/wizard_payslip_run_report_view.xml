        <menuitem id="menu_action_saving_fund_report_filter"
                  name="Saving Fund Report"
                  sequence="35"
                  action="action_wizard_saving_fund_report_filter"
                  parent="hr_payroll.menu_hr_payroll_report"/>

    <record model="ir.actions.server" id="action_hr_payroll_taxed_payroll">
        <field name="name">Taxed Report</field>
        <field name="model_id" ref="hr_payroll.model_hr_payslip_run"/>
        <field name="binding_model_id" ref="hr_payroll.model_hr_payslip_run"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.with_context(one_lote=True).report_taxed_print()
        </field>
    </record>

    <record model="ir.actions.server" id="action_hr_payroll_aspa_report">
        <field name="name">ASPA Report</field>
        <field name="model_id" ref="hr_payroll.model_hr_payslip_run"/>
        <field name="binding_model_id" ref="hr_payroll.model_hr_payslip_run"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.with_context(one_lote=True).report_aspa_print()
        </field>
    </record>

    <record model="ir.actions.server" id="action_hr_payroll_assa_report">
        <field name="name">ASSA Report</field>
        <field name="model_id" ref="hr_payroll.model_hr_payslip_run"/>
        <field name="binding_model_id" ref="hr_payroll.model_hr_payslip_run"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.with_context(one_lote=True).report_assa_print()
        </field>
    </record>

    <record model="ir.actions.server" id="action_hr_payroll_aspa_txt_report">
        <field name="name">ASPA Report (TXT)</field>
        <field name="model_id" ref="hr_payroll.model_hr_payslip_run"/>
        <field name="binding_model_id" ref="hr_payroll.model_hr_payslip_run"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                if records.structure_id.aspa_report:
                    action = {
                        "type": "ir.actions.act_url",
                        "url": "/aspa_report/" + str(records.id),
                    }
                else:
                    raise Warning('This salary structure is not configured for the ASPA report')
        </field>
    </record>

    <record model="ir.actions.server" id="action_social_objective_report">
        <field name="name">Social Objective Report</field>
        <field name="model_id" ref="hr_payroll.model_hr_payslip_run"/>
        <field name="binding_model_id" ref="hr_payroll.model_hr_payslip_run"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                if records.structure_id.social_objective:
                    action = records.with_context(one_lote=True).report_social_objective_print()
                else:
                    raise Warning('This salary structure is not configured for the Social Objective reports')
        </field>
    </record>

   </data>
</odoo>
