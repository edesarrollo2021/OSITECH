<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_wizard_payroll_report_filter_form" model="ir.ui.view">
            <field name="name">wizard.payroll.report.filter</field>
            <field name="model">wizard.payroll.report.filter</field>
            <field name="arch" type="xml">
                <form string="Download Report">
                    <group>
                        <group>
                            <field name="type" invisible="1"/>
                            <field name="structure_ids" widget="many2many_tags" required="1"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <label for="period_ids"/>
                    <group>
                        <field name="period_ids" required="1" nolabel="1"
                               context="{'search_default_group_by_year': 1, 'search_default_group_by_type': 1}"/>
                    </group>
                    <footer>
                        <button string="Export (XLSX)" name="export_report" type="object" class="oe_highlight" attrs="{'invisible': [('type', '=', 'isn')]}"/>
                        <button string="Export (XLSX)" name="export_report_ins" type="object" class="oe_highlight" attrs="{'invisible': [('type', '!=', 'isn')]}"/>
                        <button string="Close" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_payroll_report_filter" model="ir.actions.act_window">
            <field name="name">Payroll Report</field>
            <field name="res_model">wizard.payroll.report.filter</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_type': 'payroll'}</field>
        </record>

        <record id="action_wizard_taxed_report_filter" model="ir.actions.act_window">
            <field name="name">Taxed Report</field>
            <field name="res_model">wizard.payroll.report.filter</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_type': 'taxed'}</field>
        </record>

        <record id="action_wizard_assa_report_filter" model="ir.actions.act_window">
            <field name="name">ASSA Report</field>
            <field name="res_model">wizard.payroll.report.filter</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_type': 'assa'}</field>
        </record>

        <record id="action_wizard_aspa_report_filter" model="ir.actions.act_window">
            <field name="name">ASPA Report</field>
            <field name="res_model">wizard.payroll.report.filter</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_type': 'aspa'}</field>
        </record>


        <record id="action_wizard_saving_fund_report_filter" model="ir.actions.act_window">
            <field name="name">Saving Fund Report</field>
            <field name="res_model">wizard.payroll.report.filter</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_type': 'saving'}</field>
      </record>

        <record id="action_wizard_isn_report" model="ir.actions.act_window">
            <field name="name">ISN Report</field>
            <field name="res_model">wizard.payroll.report.filter</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_type': 'isn'}</field>
        </record>

        <menuitem id="menu_action_hr_payroll_report_filter"
                  name="Payroll Report"
                  action="action_wizard_payroll_report_filter"
                  parent="hr_payroll.menu_hr_payroll_report"/>

        <menuitem id="menu_action_taxed_report_filter"
                  name="Taxed Report"
                  sequence="20"
                  action="action_wizard_taxed_report_filter"
                  parent="hr_payroll.menu_hr_payroll_report"/>

        <menuitem id="menu_wizard_isn_report"
                  name="ISN Report"
                  sequence="30"
                  action="action_wizard_isn_report"
                  parent="hr_payroll.menu_hr_payroll_report"/>

<!--        <menuitem id="menu_action_assa_report_filter"-->
