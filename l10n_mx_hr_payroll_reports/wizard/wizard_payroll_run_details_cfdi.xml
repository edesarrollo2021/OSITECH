<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="view_hr_payroll_run_details_cfdi_wizard" model="ir.ui.view">
        <field name="name">Details CFDI</field>
        <field name="model">payroll.run.details.cfdi.wizard</field>
        <field name="arch" type="xml">
            <form string="Details CFDI">
                <group>
                    <group>
                         <field name="estructure_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                    <group>
                        <field name="company_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                </group>
                <footer>
                    <button string="Print" name="print_report" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Close" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_payroll_run_details_cfdi" model="ir.actions.act_window">
        <field name="name">Fiscal Folio</field>
        <field name="res_model">payroll.run.details.cfdi.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr_payroll.model_hr_payslip_run"/>
        <field name="binding_view_types">form</field>
    </record>

    </data>
</odoo>