<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="view_wizard_report_credit_form" model="ir.ui.view">
        <field name="name">report.credit.form</field>
        <field name="model">report.credit</field>
        <field name="arch" type="xml">
            <form string="Credit Report">
                <group>
                    <group>
                        <field name="type" invisible="1"/>
                        <field name="structure_ids" widget="many2many_tags" required="1"/>
                    </group>
                    <group>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        <field name="year" attrs="{'invisible': [('type', '!=', 'infonavit')], 'required': [('type', '=', 'infonavit')]}"/>
                        <field name="bimester" attrs="{'invisible': [('type', '!=', 'infonavit')], 'required': [('type', '=', 'infonavit')]}"/>
                    </group>
                </group>
                <label for="period_ids"/>
                <group>
                    <field name="period_ids" required="1" nolabel="1" context="{'search_default_group_by_year': 1, 'search_default_group_by_type': 1}"/>
                </group>
                <footer>
                    <button string="Export (XLSX)" name="export_report" type="object" class="oe_highlight"/>
                    <button string="Close" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_report_credit_fonacot" model="ir.actions.act_window">
        <field name="name">Fonacot Report</field>
        <field name="res_model">report.credit</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_type': 'fonacot'}</field>
    </record>

    <record id="action_wizard_report_credit_infonavit" model="ir.actions.act_window">
        <field name="name">Infonavit Report</field>
        <field name="res_model">report.credit</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_type': 'infonavit'}</field>
    </record>

    <menuitem id="menu_action_credits_reports"
              name="Credits Reports"
              parent="hr_infonavit_fonacot.menu_credits_employee"/>

    <menuitem id="menu_action_credit_reports_fonacot"
              name="Fonacot Report"
              action="action_wizard_report_credit_fonacot"
              sequence="5"
              parent="menu_action_credits_reports"/>

    <menuitem id="menu_action_credit_reports_infonavit"
              name="Infonavit Report"
              action="action_wizard_report_credit_infonavit"
              sequence="10"
              parent="menu_action_credits_reports"/>

    </data>
</odoo>