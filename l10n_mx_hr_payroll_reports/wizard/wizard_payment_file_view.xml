<!--        </record>-->

        <record id="action_wizard_payment_file" model="ir.actions.act_window">
            <field name="name">Bank Dispersion</field>
            <field name="res_model">wizard.payment.file</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wizard_payment_file_form"/>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_hr_payslip_run"/>
            <field name="binding_view_types">form</field>
        </record>

   </data>
</odoo>
