<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_wizard_payment_file_form" model="ir.ui.view">
            <field name="name">view.wizard.payment.file.form</field>
            <field name="model">wizard.payment.file</field>
            <field name="arch" type="xml">
                <form string="Bank Dispersion">
                    <group>
                        <field name="payslip_run_id" options="{'no_create_edit': True}"/>
                    </group>
                    <group>
                        <group>
                            <field name="bank_id" options="{'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="account_type"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Export (TXT)" name="export_report" type="object" class="oe_highlight"/>
                        <button string="Export (XLSX)" name="payment_report" type="object" class="oe_highlight"/>
                        <button string="Close" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

