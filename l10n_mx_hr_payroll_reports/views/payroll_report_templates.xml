        <template id="search_template_payroll_structure">
            <button type="button" class="o_dropdown_toggler_btn btn btn-secondary dropdown-toggle" data-toggle="dropdown">
                <span class="fa fa-book"/>
                    Structures:
                <t t-set="selected_structures" t-value="', '.join(journal.get('name') for struct in options['structures'] if struct.get('selected') "/>
                <t t-if="selected_structures">
                    <t t-esc="selected_structures"/>
                </t>
                <t t-else="">
                    All
                </t>
            </button>
            <div class="o_dropdown_menu dropdown-menu o_filter_menu" role="menu">
                <t t-foreach="options['structures']" t-as="j">
                    <t t-if="j.get('id') == 'divider'">
                        <div role="separator" class="dropdown-divider"/>
                        <b role="menuitem" class="ml4 dropdown-item-text"><t t-esc="j.get('name')"/></b>
                        <div role="separator" class="dropdown-divider"/>
                    </t>
                    <t t-if="j.get('id') != 'divider'">
                        <t t-if="j.get('id') == 'group'">
                            <a role="menuitem" class="dropdown-item js_account_report_group_choice_filter" data-filter="structures" t-att-data-id="j.get('id')" t-att-data-member-ids="j.get('ids')">
                                <t t-esc="j.get('name')"/>
                            </a>
                        </t>
                        <t t-else="">
                            <a role="menuitem" class="dropdown-item js_account_report_choice_filter" t-att-title="j.get('name')" t-att-data-id="j.get('id')" data-filter="structures">
                                <t t-esc="j.get('name')"/>
                            </a>
                        </t>
                    </t>
                </t>
            </div>
